# Sono Environment Configuration Template

# ===== API Configuration =====
API_BASE_URL=https://api.sono.wtf # or local api e.g. localhost:8000
CDN_BASE_URL=https://cdn.sono.wtf # or local cdn e.g. minio:9000

# ===== Update Service =====
UPDATE_API_URL=https://update.sono.wtf

# ===== Artist Profile Service =====
ARTIST_PROFILE_API_URL=https://images.sono.wtf

# ===== Firebase Configuration =====
# Get these values from your Firebase Console: https://console.firebase.google.com
# Project Settings > General > Your apps
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Android Configuration
FIREBASE_API_KEY_ANDROID=your-android-api-key
FIREBASE_APP_ID_ANDROID=your-android-app-id
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Web Configuration (optional, for web support)
FIREBASE_API_KEY_WEB=your-web-api-key
FIREBASE_APP_ID_WEB=your-web-app-id
FIREBASE_MESSAGING_SENDER_ID_WEB=your-web-messaging-sender-id
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# ===== Last.fm Integration =====
# create an application on last.fm for this
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_SHARED_SECRET=your_lastfm_shared_secret_here

# ===== Analytics (Optional) =====
ANALYTICS_ENABLED=true
CRASHLYTICS_ENABLED=true

# ===== App Configuration =====
APP_NAME=Sono
APP_PACKAGE=wtf.sono.beta

# ===== Feature Flags =====
ENABLE_CLOUD_FEATURES=true
ENABLE_JAM_SESSIONS=true
ENABLE_LYRICS_DISPLAY=true
ENABLE_CROSSFADE=true
ENABLE_SLEEP_TIMER=true

# ===== Debug Settings (Development Only) =====
DEBUG_MODE=false
VERBOSE_LOGGING=false